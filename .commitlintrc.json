{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"],
    "scope-empty": [0],
    "scope-case": [0],
    "subject-empty": [2, "never"],
    "subject-full-stop": [0],
    "subject-case": [0],
    "body-leading-blank": [2, "always"],
    "body-empty": [0],
    "footer-leading-blank": [0],
    "footer-empty": [0]
  }
}